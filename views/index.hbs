<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Ember.js â€¢ Test Versioning</title>
    <link rel="stylesheet" href="css/style.css">
  </head>
  <body>
  	<script type="text/x-handlebars" data-template-name="products">
    <section id="demoapp">
      <header id="header">
        <h1>Products</h1>
        {{input type="text" id="new-product" placeholder="What product are you creating today?" value=newTitle action="createProduct"}}
      </header>

      <section id="main">
        <ul id="product-list">
        	{{#each itemController="product"}}
          <li {{bind-attr class="isActive:completed isEditing:editing"}}>
          	{{#if isEditing}}
          		<input class='edit'>
          	{{else}}
	            {{input type="checkbox" checked=isActive class="toggle"}}
	            <label {{action "editProduct" on="doubleCLick"}}>{{title}}</label>
	            <button {{action "removeProduct"}} class="destroy"></button>
	          {{/if}}
          </li>
          {{/each}}
        </ul>

        <input type="checkbox" id="toggle-all">
      </section>

      <footer id="footer">
        <span id="product-count">
          <strong>2</strong> products left
        </span>
        <ul id="filters">
          <li>
            <a href="all" class="selected">All</a>
          </li>
          <li>
            <a href="active">Active</a>
          </li>
          <li>
            <a href="completed">Completed</a>
          </li>
        </ul>

        <button id="clear-completed">
          Clear completed (1)
        </button>
      </footer>
    </section>

    <footer id="info">
      <p>Double-click to edit a product</p>
    </footer>
    </script>

    <script src="js/jquery-1.10.2.min.js"></script>
	  <script src="js/handlebars-1.0.0.js"></script>
	  <script src="js/ember.js"></script>
	  <script src="js/ember-data.js"></script>

	  <script src="js/app.js"></script>
	  <script src="js/router.js"></script>
	  <script src="js/models/product.js"></script>
	  <script src="js/controllers/products_controller.js"></script>
	  <script src="js/controllers/product_controller.js"></script>
  </body>
</html>